<form class="ui form search search-resource <%= Keyword.get(@options, :size) %>" action="<%= @request_path %>" method="get">
  <div class="ui icon input">
    <i class="search link icon"></i>
    <input name="query" id="query" type="text" placeholder="<%= Keyword.get(@options, :placeholder, "Search") %>" value="<%= Map.get(@query_params, "query") %>" />
  </div>
</form>
