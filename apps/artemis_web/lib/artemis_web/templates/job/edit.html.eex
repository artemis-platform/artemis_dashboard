<div id="content-header">
  <header>
    <h1>Edit Job</h1>
  </header>
</div>

<div id="content-navigation">
  <%= render_breadcrumbs @conn %>
  <%= render_presence @conn %>
</div>

<div id="content">
  <%= render_flash_notifications @conn %>
  <%= render_event_log_notifications @conn, "Job", @job._id %>

  <%=
    form_assigns =
      assigns
      |> Map.put(:action, Routes.job_path(@conn, :update, @job._id))
      |> Map.put(:method, "put")

    render "form.html", form_assigns
  %>
</div>
